
CC = cl
LINK = link
CFLAGS = /Ox /MT /I. /I..\..\include /DHAVE_STRING_H /DNO_GETTIMEOFDAY
OBJS = mruby.obj
LIBS = ..\..\lib\libmruby.lib ..\..\lib\libmrb.lib
TARGET = ..\..\bin\mruby.exe

all: $(TARGET)

$(TARGET): $(OBJS) $(LIBS)
	$(LINK) $(OBJS) /out:$(TARGET) $(LIBS)

.c.obj:
	$(CC) $< /c $(CFLAGS)

clean:
	del *.obj
